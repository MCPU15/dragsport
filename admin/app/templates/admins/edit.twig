{% extends 'overall/layout' %}
{% block appHeader %}
<link rel="stylesheet" href="assets/admin/global/vendor/dropify/dropify.css">
<link rel="stylesheet" href="assets/admin/global/vendor/bootstrap-datepicker/bootstrap-datepicker.css">
{% endblock %}
{% block appBody %}
  <div class="page">
    <div class="page-header">
      <h1 class="page-title">Editar administrador</h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="admins/">Admins</a></li>
        <li class="breadcrumb-item active">Editar</li>
      </ol>
    </div>
    <div class="page-content">
      <div class="panel">
        <div class="panel-body container-fluid">
          <div class="row row-lg">
            <div class="col-md-12">
              <div class="example-wrap">
                <h4 class="example-title">Administradores - Edición</h4>
                <div class="example">
                  <form autocomplete="off" id="admins_form" enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-xs-12 col-md-6">
                      
                        <input type="hidden" name="id_user" id="id_user" value="{{ data.id_user }}">

                        <div class="form-group">
                          <label class="form-control-label" for="id_email">Email <span class="required">*</span></label>
                          <input type="email" id="id_email" class="form-control" name="email" value="{{ data.email }}" placeholder="email@demo.com" autocomplete="off">
                        </div>

                        <div class="form-group">
                          <label class="form-control-label" for="id_pass">Cambiar Contraseña </label>
                          <input type="password" id="id_pass" class="form-control" name="pass" placeholder="Nueva Contraseña" autocomplete="off">
                        </div>

                        <div class="form-group">
                          <label class="form-control-label" for="id_pass_repeat">Repetir Contraseña </label>
                          <input type="password" id="id_pass_repeat" class="form-control" name="pass_repeat" placeholder="Repetir Contraseña" autocomplete="off">
                        </div>
                        
                        <div class="row">
                          <div class="form-group col-xs-12 col-md-6">
                            <label class="form-control-label" for="id_gender">Género <span class="required">*</span></label>
                            <select class="form-control" id="id_gender" name="gender">
                              <option value>Elegir Género</option>
                              <option {% if data.gender == 'male' %}selected{% endif %} value="male">Masculino</option>
                              <option {% if data.gender == 'female' %}selected{% endif %} value="female">Femenino</option>
                            </select>
                          </div>

                          <div class="form-group col-xs-12 col-md-6">
                            <label class="form-control-label" for="id_birthdate">Fecha de nacimiento <span class="required">*</span></label>
                            <div class="input-group">
                              <span class="input-group-addon">
                                <i class="icon wb-calendar" aria-hidden="true"></i>
                              </span>
                              <input value="{{ data.birthdate|date('d/m/Y') }}" type="text" id="id_birthdate" class="form-control" name="birthdate" placeholder="DD/MM/YYYY" data-plugin="datepicker" data-format="dd/mm/yyyy">
                            </div>
                          </div>
                        </div>
                        

                        
                      </div>
                      <div class="col-xs-12 col-md-6">
                        <div class="example-wrap">
                          <h4 class="example-title">Imágen de Perfil </h4>
                          <div class="example">
                            <input type="file" name="perfil" id="input-file-now-custom-1" data-height="125" data-plugin="dropify" data-default-file="{{ images_dir }}{{ data.id_user }}/{{ data.image }}" />
                          </div>
                        </div>
                    
                        <div class="form-group">
                          <label class="form-control-label" for="id_first_name">Nombre <span class="required">*</span></label>
                          <input type="tel" id="id_first_name" class="form-control" name="first_name" placeholder="Nombre del usuario" autocomplete="off" value="{{ data.first_name }}">
                        </div>

                        <div class="form-group">
                          <label class="form-control-label" for="id_last_name">Apellido <span class="required">*</span></label>
                          <input type="tel" id="id_last_name" class="form-control" name="last_name" placeholder="Apellido del usuario" autocomplete="off" value="{{ data.last_name }}">
                        </div>
                        

                      </div>
                    </div>
                    <div class="form-group">
                      <button type="submit" id="admins_btn" class="btn btn-primary">Editar</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block appFooter %}
<script src="assets/admin/global/vendor/dropify/dropify.js"></script>
<script src="assets/admin/global/js/Plugin/dropify.js"></script>
<script src="assets/admin/global/vendor/bootstrap-datepicker/bootstrap-datepicker.js"></script>
<script src="assets/admin/global/js/Plugin/bootstrap-datepicker.js"></script>
<script src="assets/jscontrollers/admins/edit.js"></script>  

{% endblock %}